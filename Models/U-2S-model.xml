 <!-- Main Gear compression -->
 
 <animation>
  <type>translate</type>
  <object-name>Main-Gear-Stud</object-name>
  <object-name>Main-Gear-Wheel</object-name>
  <property>gear/gear[0]/compression-ft</property>
  <!-- Factor ??? -->
  <factor>0.3048</factor><!-- ft in m -->
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 
 <!-- Main Gear Extend/Retract -->

